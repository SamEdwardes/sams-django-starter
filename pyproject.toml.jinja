[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Add your description here"
readme = "README.md"
requires-python = ">=3.13.5"
dependencies = [
  "django>=5.2.5",
  "django-allauth[socialaccount]>=65.10.0",
  "django-cotton>=2.1.3",
  "django-htmx>=1.23.2",
  "django-tasks>=0.8.1",
  "django-template-partials>=25.1",
  "logfire[asgi,django]>=4.2.0",
  "psycopg[binary]>=3.2.9",
  "pydantic-settings>=2.10.1",
  "uvicorn[standard]>=0.35.0",
]

[dependency-groups]
dev = [
  "django-types>=0.22.0",
  "djhtml>=3.0.8",
  "djlint>=1.36.4",
  "pre-commit>=4.2.0",
  "ruff>=0.12.8",
]

[tool.djlint]
profile = "django"
format_css = true
indent = 2
max_attribute_length = 1
blank_line_after_tag = "load,extends,include,endpartialdef"
blank_line_before_tag = "load,extends,include,partialdef"

[tool.basedpyright]
typeCheckingMode = "basic"
reportIgnoreCommentWithoutRule = false
